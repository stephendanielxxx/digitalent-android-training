<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_pindah"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Pindah Activity" />

    <Button
        android:id="@+id/btn_day_2"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="45dp"
        android:text="Day 2"/>

    <Button
        android:id="@+id/btn_day_2_api"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="45dp"
        android:text="Day 2 API RETROFIT"/>
    
    <Button
        android:id="@+id/btn_day_3_glide"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Day - 3 Glide"/>

    <Button
        android:id="@+id/btn_maps"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Day - 3 Maps"/>

    <Button
        android:id="@+id/btn_sqlite"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Day - 3 SQLITE"/>

    <Button
        android:id="@+id/btn_unsub"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Day - 4 FCM Unsubscribe Topic"/>

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Day - 4 FCM Subscribe Topic"/>

    <Button
        android:id="@+id/btn_write"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Day - 4 Firebase Database"/>
</LinearLayout>