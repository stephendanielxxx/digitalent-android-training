<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".remoteconfig.RemoteConfigActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_get_version"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Get Min Version"/>

    <Button
        android:id="@+id/btn_feature_a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Feature A"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_feature_b"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Feature B"
        android:visibility="gone"/>

</LinearLayout>